<section class="<%= action_class action%>">
  <div class="container">
    <div class="<%= action_class action%>-content">
      <div class="<%= action_class action%>-form">
        <h2 class="form-title"><%= action_title action %></h2>
        <%= sign_up_in_or_update action  %>
         <div class="social-login">
          <span class="social-label">Or login with</span>
          <ul class="socials">
            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="<%= action_class action%>-image">
        <figure><%= image_tag "#{action_class action}-image.jpg", alt: "sing up image" %></figure>
        <%= action_link action %>
      </div>
    </div>
    <%= link_to 'Back', '/' %>
  </div>
</section>
