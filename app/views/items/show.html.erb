<% item = @item %>
<%# <div style='display: block;'> %>
<%# <div class="card d-inline-block card-columns col-6" > %>
<div style='text-align: center;'>
  <div class="slideshow-container">
    <!-- Full-width images with number and caption text -->
    <% item.images.each do |img|%>
      <div class="mySlides fade">
        <div class="numbertext">1 / 3</div>
        <%= image_tag img.path, style:"width:450px; height:400px" %>
        <div class="text">Caption Text</div>
      </div>
    <% end %>
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)" style='float: left;'>&#10094;</a>
    <a class="next" onclick="plusSlides(1)" style='float: right;'>&#10095;</a>
  </div>
  <div class="d-flex text-center " style='text-align: center;'>
    <% item.images.each_with_index do |_, indx|%>
      <span class="dot" onclick="currentSlide(<%= indx+1 %>)"></span>
    <% end %>
  </div>
  <hr>
  <div class="card-body ">
    <h5 class="card-title"></h5>
    <%= tag.h4 item.title, class:"card-text " %>
  </div>
  <ul class="list-group list-group-flush" style="list-style-type:none;">
    <!--<li class="list-group-item">Starting at:<%= item.start_time.localtime %> </li>
    <li class="list-group-item">Starting price: $<%= item.starting_price %> </li>-->
    <li class="list-group-item"> <%= status_based_display @item  %> </li> 
  </ul>
  <!--<div class="card-body">
    <%=link_to "view item", item_path(item), class: "card-link" %>
    <a href="#" class="card-link">Another link</a>
  </div> -->
</div>
<%= tag.hr %>
<%= tag.h2 'Item detail:' %>
<ul class="list-group">
  <% if item.bulletings%>
  <% @item.bulletings.each do |bullet|%>
    <%= tag.li bullet.bulleting, class:"list-group-item"%><br>
  <% end %>
  <% else %>
    <%= This 'item has no detail!' %>
  <% end %>
</ul>
<%# </div> %>
<%# </div> %>
